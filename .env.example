# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_IMAGE_MODEL=dall-e-3
OPENAI_IMAGE_SIZE=1792x1024
OPENAI_IMAGE_QUALITY=standard

# HTTP Basic Authentication (Single User)
AUTH_USERNAME=ikigai_user
AUTH_PASSWORD=change_this_secure_password

# Server Configuration
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# Application Settings
APP_NAME=IKIGAI X-ONE
SESSION_SECRET=change_this_random_string
DATA_PATH=./data/sessions.json

# Backup Configuration (Optional)
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_PATH=./data/backups

# Vercel Deployment (Alternative to Strato VPS)
# No specific env vars needed for Vercel, but you can add custom ones:
VERCEL_PROJECT_ID=your_vercel_project_id
VERCEL_ORG_ID=your_vercel_org_id
